<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.olympics.mvc.model.dao.UserDao">

	<!-- 회원 가입 insertUser -->
	<insert id="insertUser" parameterType="User">
		INSERT INTO users (email, password, name, profile_img, img_src)
		VALUES (#{email}, #{password}, #{name}, #{profile_img}, #{img_src});
	</insert>
	
	<!-- 회원 정보 조회 selectUser -->
	<select id="selectUser" resultType="User" parameterType="User">
		SELECT * FROM users
		WHERE email = #{email};
	</select>
	
	<!-- 회원 삭제 deleteUser -->
	<delete id="deleteUser" parameterType="int">
		DELETE FROM users
		WHERE user_id = #{user_id};
	</delete>
	
	<!-- 회원 정보 수정 modifyUser -->
	<update id="modifyUser" parameterType="User">
		UPDATE users
		SET email = #{email}, password = #{password}, name = #{name}, profile_img = #{profile_img},
		img_src = #{img_src}
		WHERE user_id = #{user_id};
	</update>
	
	<!-- 전체 회원 정보 조회 selectAccounts -->
	<select id="selectAccounts" resultType="User">
		SELECT * FROM users;
	</select>
	
</mapper>